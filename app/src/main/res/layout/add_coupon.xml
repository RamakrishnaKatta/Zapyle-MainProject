<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:background="@color/color_4a">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="@dimen/margin_5"
            android:text="ADD COUPON"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_18" />

        <ImageView
            android:id="@+id/close_couponform"
            android:layout_width="@dimen/margin_40"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#212121"
            android:padding="@dimen/margin_10"
            android:src="@drawable/close" />

    </RelativeLayout>

    <EditText
        android:id="@+id/coupon_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:backgroundTint="@color/black"
        android:padding="@dimen/margin_10" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:text="NOTE: The Coupon you apply might replace other coupons that are already applied." />


    <TextView
        android:id="@+id/applycoupon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:background="@color/pink"
        android:gravity="center"
        android:text="APPLY"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_18" />
</LinearLayout>
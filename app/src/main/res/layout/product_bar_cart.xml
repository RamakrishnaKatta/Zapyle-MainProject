<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/cartClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgback"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.2"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:src="@drawable/appvirality_prev_grey"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/product_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_toRightOf="@+id/imgback"
            android:layout_weight="2.6"
            android:ellipsize="end"
            android:gravity="left"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="Loading"
            android:textAllCaps="true"
            android:textColor="#4A4A4A"
            android:textSize="20dp"
            android:textStyle="normal" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/cartClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_5"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_10"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/imgicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/cartbutton" />

        <TextView
            android:id="@+id/tvcount"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/imgicon"
            android:layout_alignRight="@+id/imgicon"
            android:layout_centerVertical="true"
            android:layout_gravity="top"
            android:background="@drawable/circle_boarder_color"
            android:gravity="center"
            android:text="  "
            android:textAlignment="gravity"
            android:textColor="#ffffff"
            android:textSize="9dp"
            android:visibility="visible" />
    </RelativeLayout>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal"
    android:padding="@dimen/margin_10">

    <RadioButton
        android:id="@+id/radio_offer_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_5" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_5">

            <TextView
                android:id="@+id/offer_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@drawable/dotted_border"
                android:padding="@dimen/margin_8"
                android:text="HAHAHA"
                android:textColor="@color/color_4a"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/offer_applied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APPLIED"
                android:textColor="@color/color_green"
                android:textSize="@dimen/text_10" />

        </LinearLayout>

        <TextView
            android:id="@+id/offer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upto 60% off International brands"
            android:textColor="@color/color_4a"
            android:textSize="@dimen/text_12"
            android:layout_marginBottom="@dimen/margin_5"/>


        <TextView
            android:id="@+id/offer_benifit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You save â‚¹925"
            android:textColor="@color/pink"
            android:textSize="@dimen/text_16" />

        <View
            android:id="@+id/offer_seperation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/offer_seperator"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"/>

        <TextView
            android:id="@+id/offer_toggle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="More offers"
            android:textColor="@color/color_4a"
            android:textSize="@dimen/text_11"/>
    </LinearLayout>

</LinearLayout>
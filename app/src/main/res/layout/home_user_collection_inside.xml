<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/user_collection_image"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/user_collection_linear_layout"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/user_collection_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAENARYS TARGARYN"/>
            <TextView
                android:id="@+id/user_collection_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="khaleesi"
                android:layout_marginTop="@dimen/margin_5"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/user_collection_outfits"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 OUTFITS"/>
                <TextView
                    android:id="@+id/user_collection_admirers"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="34 ADMIRERS"/>
            </LinearLayout>
            <TextView
                android:id="@+id/user_collection_admire_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingRight="@dimen/margin_10"
                android:paddingLeft="@dimen/margin_10"
                android:text="Admire"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/discover_admire_bg"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
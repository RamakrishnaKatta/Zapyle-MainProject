<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:text="REVIEW"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_15"
        android:gravity="center"
        android:text="Thanks for your listing. Our stylist will review it and get back to you with the status real soon!"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/touploadClick"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="LIST ANOTHER ITEM"
            android:gravity="center"
            android:background="#ff7477"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            />
        <TextView
            android:id="@+id/toprofile"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:text="OK"
            android:textColor="@android:color/white"
            />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/drawerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:letterSpacing=".1"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_5"
        android:text="Home"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:textColor="@color/access" />
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/margin_7"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_5"
        android:src="@drawable/down"
        android:id="@+id/imgarrow"
        android:visibility="gone"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/drawerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_9"
        android:padding="@dimen/margin_5" />

    <LinearLayout
        android:id="@+id/secondarylistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drawerText"
        android:orientation="vertical">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/secondarylistview"
        android:layout_height="1dp"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_30"
        android:background="#33FFFFFF" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/profilePlaceholder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#FFFFFF"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            android:layout_above="@+id/gototsell"
            android:id="@+id/profile_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


        <ProgressBar
            android:id="@+id/profile_progress"
            android:layout_width="@dimen/margin_35"
            android:layout_height="@dimen/margin_35"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/custom_progressbar_background" />


        <TextView
            android:id="@+id/gototsell"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:text="Upload a new item"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:background="#FF7373"
            android:textColor="@android:color/white"
            android:textSize="@dimen/margin_16"/>


    </RelativeLayout>

</RelativeLayout>